local Players = game:GetService("Players")
local ProximityPromptService = game:GetService("ProximityPromptService")
local rs = game:GetService("ReplicatedStorage")
local player = Players.LocalPlayer

local guiTable = {}
local tweenService = game:GetService("TweenService")
local tweenTime = 0.5




ProximityPromptService.PromptShown:Connect(function(prompt)
	--print("Should show")
	
	local proximityPrompt = prompt
	local promptGui = proximityPrompt.Parent.ProximityPromptGui
	local tween = tweenService:Create(promptGui.CanvasGroup, TweenInfo.new(tweenTime), {GroupTransparency = 0})
	tween:Play()

end)

ProximityPromptService.PromptHidden:Connect(function(prompt)
	
	local proximityPrompt = prompt
	local promptGui = proximityPrompt.Parent.ProximityPromptGui
	local tween = tweenService:Create(promptGui.CanvasGroup, TweenInfo.new(tweenTime), {GroupTransparency = 1})
	tween:Play()

end)



